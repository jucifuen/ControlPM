# Configuración de Base de Datos
POSTGRES_PASSWORD=secure_password_change_me
POSTGRES_USER=avanzando_user
POSTGRES_DB=avanzando_db
DATABASE_URL=postgresql://avanzando_user:secure_password_change_me@postgres:5432/avanzando_db

# Configuración de Redis
REDIS_PASSWORD=redis_secure_password
REDIS_URL=redis://:redis_secure_password@redis:6379/0

# Configuración de JWT
JWT_SECRET_KEY=super_secret_jwt_key_change_in_production
JWT_ACCESS_TOKEN_EXPIRES=3600

# Configuración de Flask
FLASK_ENV=production
FLASK_DEBUG=false
SECRET_KEY=flask_secret_key_change_in_production

# URLs y CORS
REACT_APP_API_URL=https://api.avanzando.app
CORS_ORIGINS=https://avanzando.app,https://www.avanzando.app

# Configuración de Email (opcional)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=noreply@avanzando.app
MAIL_PASSWORD=email_app_password

# Configuración de Almacenamiento (opcional)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_S3_BUCKET=avanzando-uploads
AWS_REGION=us-east-1

# Configuración de Monitoreo
GRAFANA_PASSWORD=admin_secure_password
PROMETHEUS_RETENTION=15d

# Configuración de Logging
LOG_LEVEL=INFO
LOG_FILE=/app/logs/avanzando.log

# Configuración de Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60

# Configuración de Backup
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# Configuración de SSL
SSL_ENABLED=true
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Configuración de Notificaciones Push (opcional)
FIREBASE_SERVER_KEY=your_firebase_server_key
PUSH_NOTIFICATIONS_ENABLED=true

# Configuración de Integración con Slack (opcional)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
SLACK_NOTIFICATIONS_ENABLED=false

# Configuración de Integración con Teams (opcional)
TEAMS_WEBHOOK_URL=https://outlook.office.com/webhook/YOUR/TEAMS/WEBHOOK
TEAMS_NOTIFICATIONS_ENABLED=false

